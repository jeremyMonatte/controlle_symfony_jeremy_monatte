{{ form_start(form) }}
{% if success %}
	<p style="color:#18BC9C;">L'insertion en base à bien été éfféctué</p>
{% endif %}
<form name="sentMessage" id="contactForm" novalidate="novalidate">
	<div class="control-group">
		<div class="form-group floating-label-form-group controls mb-0 pb-2">
			{{ form_widget(form.civilite ,{'attr': {'class': 'form-control','id':'civility','required':'required'}}) }}
			<p class="help-block text-danger">
				{{ form_errors(form.civilite)}}
			</p>
		</div>
	</div>
	<div class="control-group">
		<div class="form-group floating-label-form-group controls mb-0 pb-2">
			<label>Nom</label>
			{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
			<p class="help-block text-danger">
				{{ form_errors(form.name)}}
			</p>
		</div>
	</div>
	<div class="control-group">
		<div class="form-group floating-label-form-group controls mb-0 pb-2">
			<label>Prénom</label>
			{{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
			<p class="help-block text-danger">
				{{ form_errors(form.prenom)}}
			</p>
		</div>
	</div>
	<div class="control-group">
		<div class="form-group floating-label-form-group controls mb-0 pb-2">
			<label>Email</label>
			{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
			<p class="help-block text-danger">
				{{ form_errors(form.email)}}
			</p>
		</div>
	</div>
	<div class="control-group">
		<div class="form-group floating-label-form-group controls mb-0 pb-2">
			<label>Téléphone</label>
			{{ form_widget(form.tel, {'attr': {'class': 'form-control'}}) }}
			<p class="help-block text-danger">
				{{ form_errors(form.tel)}}
			</p>
		</div>
	</div>
	<div class="control-group">
		<div class="form-group floating-label-form-group controls mb-0 pb-2">
			<label for="newsletter">Newsletter</label>
			{{ form_widget(form.news, {'attr': {'class': 'form-control'}}) }}Inscription à la Newsletter
			<p class="help-block text-danger">
				{{ form_errors(form.news)}}
			</p>
		</div>
	</div>
	<br/>
	<div id="success"></div>
	<div class="form-group">
		<button type="submit" class="btn btn-primary btn-xl" id="sendMessageButton">
			Send
		</button>
	</div>
</form>
{{ form_end(form) }}
